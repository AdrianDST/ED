 Text = 'Empezar'
 
}
$button2 = [Button] @{
 Text = 'Entendido'
 
}



$button1.Location = New-Object System.Drawing.Point (100,200)
$button3.Location = New-Object System.Drawing.Point (100,100)
$TextBox = New-Object System.Windows.Forms.TextBox
